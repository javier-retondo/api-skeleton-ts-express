{
   "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "outDir": "./dist",
      "baseUrl": "./",
      "sourceMap": true,
      "paths": {
         "*": ["src/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"]
}
